[user]
	name = Nikos Vasilakis
	email = nikos.ailo@gmail.com
[core]
	editor = vim
	excludesfile = $HOME/.vim/.gitignore
[color]
	diff = always
	status = always
	branch = always
	interactive = always
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
	d = difftool
  p = pull --rebase
	ctags = !.git/hooks/ctags
[init]
	templatedir = ~/.vim/.git_template
